<h1>Listing All Users</h1>

<div>

  <div>
    <div>Name</div>
    <div>Email</div>
    <div>Postcount</div>
  </div>

  <% @users.each do |user| %>
    <div>
      <div><%= user.name %></div>
      <div><%= user.email %></div>
      <div><%= user.posts.count %></div>
      <div><%= link_to 'Delete User', user_path(user), method: 'delete' %></div>
    </div>
  <% end -%>

</div>
