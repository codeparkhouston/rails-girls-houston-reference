<%= gravatar_for @user %>
<h1><%= @user.name %> (<%= @user.email %>)</h1>

<h3><%= @user.name %>'s Posts</h3>

<div>
  <% @user.posts.each do |post| %>
    <div><%= post.title %></div>
    <div><%= post.body %></div>
    <div><img src="<%= post.attachment_url(:thumb) %>" /></div>
  <% end -%>
</div>
